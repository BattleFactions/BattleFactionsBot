{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "incremental": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "rootDir": "./",
    "baseUrl": "./src",
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"],
    "paths": {
      "app/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/types.d.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*", "*.config.js", "**/*.js"]
}
